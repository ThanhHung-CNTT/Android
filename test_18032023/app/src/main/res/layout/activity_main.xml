<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/banner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BẠN CẦN ƯU ĐÃI GÌ?"
            android:layout_weight="1"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem tất cả"
            android:textSize="25dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/needs" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HÔM NAY ĂN GÌ?"
        android:textSize="25dp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:stretchColumns="*">

        <TableRow>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/breakfast_menu" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/lunch_banner" />

        </TableRow>

        <TableRow>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/dinner_1_menu" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/dinner_2_menu" />

        </TableRow>

    </TableLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:src="@drawable/advertise_1" />

</LinearLayout>